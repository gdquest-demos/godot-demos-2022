	// Replaces all but alpha to white if active = true
	vec4 origional_color = texture(TEXTURE, UV);
	vec4 white_color = vec4(1.0, 1.0, 1.0, origional_color.a); 
	vec4 new_color = origional_color;
	if (active == true)
	{
		new_color = white_color
	}
	COLOR = new_color;
}"

